<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/headerBackground"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:clickable="true"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivNavigationHeaderImage"
        android:layout_width="@dimen/headerImageSize"
        android:layout_height="@dimen/headerImageSize"
        android:background="@drawable/ic_user_place_holder"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="@dimen/headerImageCircularBorderWidth"
        android:layout_marginTop="@dimen/headerImageMarginTop"
        android:layout_marginStart="@dimen/headerHorizontalMargin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivNightMode"
        android:layout_width="@dimen/headerNightModeIconSize"
        android:layout_height="@dimen/headerNightModeIconSize"
        android:src="@drawable/ic_night_mode_on"
        android:theme="@style/NoActionBarTheme"
        android:layout_marginTop="@dimen/headerImageMarginTop"
        android:layout_marginEnd="@dimen/headerNightModeIconMarginEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/tvHeaderUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivNavigationHeaderImage"
        android:paddingBottom="@dimen/headerTextViewPaddingBottom"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/headerTextViewMarginTop"
        android:layout_marginStart="@dimen/headerHorizontalMargin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivNavigationHeaderImage" />




</androidx.constraintlayout.widget.ConstraintLayout>